<!DOCTYPE html>
<html>
<head>
  <title>ShareTaxi</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-datepicker' %>
  <%= csrf_meta_tag %>

  <script>

    $(function(){
      $('#datepicker').appendDtpicker();
    });

  </script>
</head>
<body>
<%= link_to "Book a Taxi", new_taxi_path %>
<%= link_to "Share a Taxi", taxis_path %>
<% if current_user %>
<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
  <% else %>
  <%= link_to 'Sign in', user_session_path %>

  <% end %>
  <%= yield %>

</body>
</html>
