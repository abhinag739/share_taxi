<h1>Listing taxis</h1>

<table>
  <tr>
    <th>Operator</th>
    <th>Hire time</th>
    <th>Source</th>
    <th>Destination</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @taxis.each do |taxi| %>
  <tr>
    <td><%= taxi.operator %></td>
    <td><%= taxi.hire_time %></td>
    <td><%= taxi.source %></td>
    <td><%= taxi.destination %></td>
    <td><%= link_to 'Show', taxi %></td>
    <td><%= link_to 'Edit', edit_taxi_path(taxi) %></td>
    <td><%= link_to 'Destroy', taxi, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Bid Now', new_taxi_bid_path(taxi) %></td>
  </tr>
<% end %>
</table>

